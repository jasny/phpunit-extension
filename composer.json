{
    "name": "jasny/phpunit-extension",
    "description": "",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "http://www.jasny.net"
        }
    ],
    "support": {
        "issues": "https://github.com/jasny/phpunit-extension/issues",
        "source": "https://github.com/jasny/phpunit-extension"
    },
    "require": {
        "php": "~7.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">= 7.0, < 8.0",
        "mikey179/vfsStream": "~1.6",
        "squizlabs/php_codesniffer": "~3.2",
        "phpstan/phpstan": ">= 0.9.0, < 1.0.0",
        "phpstan/phpstan-strict-rules": ">= 0.9.0, < 1.0.0",
        "appzcoder/phpcloc": "^0.0.2"
    },
    "autoload": {
        "psr-4": {
            "Jasny\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jasny\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpstan analyse",
            "phpcs -p src"
        ],
        "post-create-project-cmd": [
            "bash init.sh && rm init.sh"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
